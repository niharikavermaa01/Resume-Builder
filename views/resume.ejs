<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Resume</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/resume1.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    
    <!-- NEW: Added a style block specifically for PDF printing -->
    <style>
        @media print {
            /* This ensures the styles are only applied when printing to PDF */
            .resume-main {
                display: block !important; /* Force a single column layout */
            }
            .left-column, .right-column {
                width: 100% !important; /* Make both columns full-width */
                padding: 0 !important;
                float: none !important;
            }
            .download-container {
                display: none; /* Hide the download button in the PDF itself */
            }
            body, .resume-container {
                margin: 0;
                padding: 0;
                box-shadow: none;
            }
        }
    </style>
</head>
<body>
  <div class="resume" id="resume">
        <div class="header">
            <% if (resume_info.name) { %>
                <h1><%= resume_info.name %></h1>
            <% } %>
            <% if (resume_info.Job_title) { %>
                <p><%= resume_info.Job_title %></p>
            <% } %>
        </div>

        <div class="contact-info">
            <ul>
                <% if (resume_info.contact) { %>
                    <li><i class="fas fa-phone"></i> <%= resume_info.contact %></li>
                <% } %>
                <% if (resume_info.email) { %>
                    <li><i class="fas fa-envelope"></i> <%= resume_info.email %></li>
                <% } %>
                <% if (resume_info.linkedin) { %>
                    <li><i class="fab fa-linkedin"></i> <a href="<%= resume_info.linkedin %>" target="_blank"><%= resume_info.linkedin %></a></li>
                <% } %>
            </ul>
        </div>

        <% if (resume_info.skills && resume_info.skills.length > 0) { %>
            <div class="section">
                <h2>Skills</h2>
                <ul class="skills">
                    <% resume_info.skills.forEach(skill => { %>
                        <li><%= skill %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <% if (resume_info.experience) { %>
            <div class="section">
                <h2>Professional Experience</h2>
                <p><%= resume_info.experience %></p>
            </div>
        <% } %>

        <% if (resume_info.projectsAwards) { %>
            <div class="section">
                <h2>Projects and Awards</h2>
                <p><%= resume_info.projectsAwards %></p>
            </div>
        <% } %>

        <% if (resume_info.degree || resume_info.university || resume_info.year) { %>
            <div class="section">
                <h2>Education</h2>
                <% if (resume_info.degree) { %><p><strong>Degree:</strong> <%= resume_info.degree %></p><% } %>
                <% if (resume_info.university) { %><p><strong>University:</strong> <%= resume_info.university %></p><% } %>
                <% if (resume_info.year) { %><p><strong>Year:</strong> <%= resume_info.year %></p><% } %>
            </div>
        <% } %>
    </div>
    <button id="downloadBtn">Download PDF</button>

    <script>
        document.getElementById("downloadBtn").addEventListener("click", () => {
            const resumeElement = document.getElementById("resume-to-print");

            const options = {
                margin:       0.5, // A standard margin for printing
                filename:     'resume.pdf',
                image:        { type: 'jpeg', quality: 0.98 },
                html2canvas:  { 
                    scale: 2,
                    useCORS: true // Important for loading external images/fonts
                },
                jsPDF:        { 
                    unit: 'in', 
                    format: 'a4', // Use the standard A4 paper size
                    orientation: 'portrait' 
                }
            };

            html2pdf().set(options).from(resumeElement).save();
        });
    </script>
</body>
</html>

